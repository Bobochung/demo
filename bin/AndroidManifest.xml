<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lsnu.idle.campus_life"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 判断是否有网络的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name="com.lsnu.idle.service.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/lsnu"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.lsnu.idle.campus_life.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/StyledIndicators" >
        </activity>
        <activity
            android:name="com.lsnu.idle.campus_life.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lsnu.idle.lock.SetPasswordActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity android:name="com.lsnu.idle.campus_life.PersonnalActivity" />
        <activity android:name="com.lsnu.idle.campus_life.LoginActivity" />
        <activity android:name="com.lsnu.idle.campus_life.UserRegisterActivity" />
        <activity android:name="com.lsnu.idle.campus_life.ReleaseActivity" />
        <activity android:name="com.lsnu.idle.campus_life.MyReleaseActivity" />
        <activity android:name="com.lsnu.idle.campus_life.ShopInfoActivity" />
        <activity android:name="com.lsnu.idle.campus_life.PicturePreview" />
        <activity android:name="com.lsnu.idle.campus_life.ShopListActivity" />
        <activity android:name="com.lsnu.idle.campus_life.LeaveMessageActivity" />
        <activity android:name="com.lsnu.idle.campus_life.MyMsgActivity" />
        <activity android:name="com.lsnu.idle.campus_life.MyCollectionActivity" />
        <activity android:name="com.lsnu.idle.campus_life.LookActivity" />
        <activity android:name="com.lsnu.idle.campus_life.MyLookActivity" />
        <activity android:name="com.lsnu.idle.campus_life.LookInfoActivity" />
        <activity android:name="com.lsnu.idle.campus_life.LookListActivity" />
        <activity
            android:name="com.lsnu.idle.campus_life.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>